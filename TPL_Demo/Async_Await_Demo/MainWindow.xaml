<Window x:Class="Async_Await_Demo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Async_Await_Demo"
        mc:Ignorable="d"
        Title="Async und Await" Height="200" Width="400" WindowStartupLocation="CenterScreen">
    <StackPanel Margin="10">
        <TextBox x:Name="textBoxEingabe" Margin="10"/>
        <Button Content="Start" Click="Button_Click" Margin="10"/>
        <ProgressBar x:Name="progressBarWert" Minimum="0" Maximum="100" Height="22" Margin="10"/>
    </StackPanel>
</Window>
